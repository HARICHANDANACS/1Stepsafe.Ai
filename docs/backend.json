{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores a user's persistent context, including location, daily routine, and climate sensitivities.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The user's unique ID, matching their Firebase Auth UID."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "location": {
          "type": "object",
          "description": "The user's primary location for climate data.",
          "properties": {
            "city": {
              "type": "string"
            },
            "lat": {
              "type": "number"
            },
            "lon": {
              "type": "number"
            }
          },
          "required": ["city"]
        },
        "routine": {
          "type": "object",
          "description": "The user's typical daily schedule.",
          "properties": {
            "morningCommuteStart": {
              "type": "string",
              "format": "time"
            },
            "workHoursStart": {
              "type": "string",
              "format": "time"
            },
            "eveningCommuteStart": {
              "type": "string",
              "format": "time"
            }
          },
          "required": ["morningCommuteStart", "workHoursStart", "eveningCommuteStart"]
        },
        "commuteType": {
          "type": "string",
          "enum": ["Walk", "Bike", "Public Transport", "Drive"]
        },
        "sensitivities": {
          "type": "object",
          "description": "The user's self-reported sensitivity to different climate factors.",
          "properties": {
            "heat": {
              "type": "string",
              "enum": ["Low", "Medium", "High"]
            },
            "aqi": {
              "type": "string",
              "enum": ["Yes", "No"]
            }
          },
          "required": ["heat", "aqi"]
        },
        "healthProfile": {
          "type": "object",
          "description": "Optional health information for more personalized recommendations.",
          "properties": {
            "ageRange": {
              "type": "string",
              "enum": ["18-29", "30-49", "50-64", "65+"]
            },
            "skinType": {
              "type": "string",
              "enum": ["Very Fair", "Fair", "Medium", "Olive", "Brown", "Black"]
            },
            "respiratoryHealth": {
              "type": "string",
              "enum": ["Good", "Moderate", "Sensitive"]
            }
          }
        }
      },
      "required": ["id", "name", "location", "routine", "commuteType", "sensitivities"]
    },
    "ExposureRecord": {
      "title": "Exposure Record",
      "description": "A record of a user's environmental exposure for a single day.",
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the exposure record in YYYY-MM-DD format."
        },
        "personalHealthRiskScore": {
          "type": "number",
          "description": "The calculated personal health risk score for that day."
        },
        "maxHeat": {
          "type": "number",
          "description": "The maximum temperature recorded for that day."
        },
        "maxAqi": {
          "type": "number",
          "description": "The maximum AQI recorded for that day."
        },
        "maxUv": {
          "type": "number",
          "description": "The maximum UV index recorded for that day."
        }
      },
      "required": ["date", "personalHealthRiskScore", "maxHeat", "maxAqi", "maxUv"]
    }
  },
  "auth": {
    "providers": [
      "email-password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores a single document per user containing their complete profile. The document ID must match the user's Firebase Auth UID."
        }
      },
      {
        "path": "/users/{userId}/exposureHistory/{historyId}",
        "definition": {
            "entityName": "ExposureRecord",
            "schema": {
                "$ref": "#/backend/entities/ExposureRecord"
            },
            "description": "Stores a record of a user's environmental exposure for a single day."
        }
      }
    ]
  }
}
