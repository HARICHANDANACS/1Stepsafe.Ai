{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores a user's persistent context, including location, daily routine, and climate sensitivities.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The user's unique ID, matching their Firebase Auth UID."
        },
        "location": {
          "type": "object",
          "description": "The user's primary location for climate data.",
          "properties": {
            "city": {
              "type": "string"
            },
            "lat": {
              "type": "number"
            },
            "lon": {
              "type": "number"
            }
          },
          "required": ["city", "lat", "lon"]
        },
        "routine": {
          "type": "object",
          "description": "The user's typical daily schedule.",
          "properties": {
            "morningCommuteStart": {
              "type": "string",
              "format": "time"
            },
            "workHoursStart": {
              "type": "string",
              "format": "time"
            },
            "lunchStart": {
              "type": "string",
              "format": "time"
            },
            "eveningCommuteStart": {
              "type": "string",
              "format": "time"
            }
          },
          "required": ["morningCommuteStart", "workHoursStart", "lunchStart", "eveningCommuteStart"]
        },
        "commuteType": {
          "type": "string",
          "enum": ["Walk", "Bike", "Public Transport", "Drive"]
        },
        "sensitivities": {
          "type": "object",
          "description": "The user's self-reported sensitivity to different climate factors.",
          "properties": {
            "heat": {
              "type": "string",
              "enum": ["Low", "Medium", "High"]
            },
            "aqi": {
              "type": "string",
              "enum": ["Low", "Medium", "High"]
            },
            "uv": {
              "type": "string",
              "enum": ["Low", "Medium", "High"]
            }
          },
          "required": ["heat", "aqi", "uv"]
        }
      },
      "required": ["id", "location", "routine", "commuteType", "sensitivities"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores a single document per user containing their complete profile. The document ID must match the user's Firebase Auth UID."
        }
      }
    ]
  }
}
