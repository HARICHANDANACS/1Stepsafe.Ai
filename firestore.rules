rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      /**
       * @description A user's profile document. Only the authenticated owner
       * can read, create, update, or delete their own profile.
       * The document ID must match the user's UID.
       * @path /users/{userId}
       * @allow User 'abc' can write to '/users/abc'.
       * @deny User 'xyz' cannot read '/users/abc'.
       */
      allow read, write: if isOwner(userId);
    }
  }
}
